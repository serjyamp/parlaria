.navbar.navbar-inverse(ng-controller="NavbarCtrl as vm")
  .container
    .navbar-header
      button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-inverse-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref='/') Parlaria
    .navbar-collapse.collapse.navbar-inverse-collapse
      ul.nav.navbar-nav
        li(ui-sref-active="active" ng-if="$root.firebaseUser")
          a(ui-sref='words' href="") words
        li(ui-sref-active="active" ng-if="$root.firebaseUser")
          a(ui-sref='notes' href="") notes
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.dropdown-toggle(data-target='#' data-toggle='dropdown' ng-class="{signed : $root.firebaseUser}")
            span(ng-show="!$root.firebaseUser")
              | Login 
              b.caret
            span.userimg(ng-show="$root.firebaseUser")
              img(ng-src="{{$root.firebaseUser.photoURL}}")
          ul.dropdown-menu
            li(ng-if="!$root.firebaseUser")
              a(ng-click="vm.signIn()").navbar_link Google
            li(ng-if="$root.firebaseUser")
              a(ng-click="vm.signOut()").navbar_link Sign out
