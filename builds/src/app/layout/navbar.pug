div(ng-controller="NavbarCtrl as vm")
    md-toolbar(layout="row" layout-align='center start' )
        .layout-max-width(layout='row', flex='')
            div(flex="20" layout="column")
                a.logo(ui-sref="/") Parlaria
            div(flex="auto" layout="column")
                md-nav-bar(md-selected-nav-item='currentNavItem', nav-bar-aria-label='navigation links' layout="row" layout-align='center start')
                    md-nav-item(md-nav-sref='words', name='words') Words
                    md-nav-item(md-nav-sref='notes', name='notes') Notes
            div(flex="20" layout="column" layout-align='center end')
                md-menu
                    md-button.md-icon-button(aria-label='Menu', ng-click='vm.openMenu($mdMenu, $event)')
                        | MENU
                        md-icon(md-menu-origin='', md-svg-icon='call:phone')
                    md-menu-content(width='4')
                        md-menu-item
                            md-button(ng-click='vm.redial($event)')
                                md-icon(md-svg-icon='call:dialpad', md-menu-align-target='')
                                | Redial